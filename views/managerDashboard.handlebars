<section>
  <header class="header">
    <p class="name">TaskPro</p>

    <nav class="nav">
      <a href="#">Profile</a>
      <a id="logout">Logout</a>
    </nav>
  </header>

  <main>
    <div class="title">
      <h1>Manager Dashboard</h1>
    </div>

    <div class="card-container">
      <div class="card">
        <h2>Create a Job</h2>
        <div class="card-content">
          <div class="form-group">
            <input class="createJob" type="text" id="project-name" placeholder="New job">
          </div>
          <div class="dropdown-center">
            <button id="supervisor-dropdown" class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              Assign supervisor:
            </button>
            {{#if users.length}}
              <ul class="dropdown-menu">
              {{#each users}}
                <li class="dropdown-item supervisor-li">
                  <p>{{first_name}} {{last_name}}</p>
                </li>
              {{/each}}
              </ul>
            {{/if}}
          </div>
          <div class="form-group">
            <button id="create-btn" class="btn btn-primary" type="submit">Create</button>
          </div>
        </div>
      </div>

      <div class="card">
        <h2>Update Job</h2>
        <div class="card-content">
          <ul>
            <li>This</li>
            <li>is </li>
            <li>temporary</li>
          </ul>
        </div>
      </div>

      <div class="card">
        <h2>Tasks</h2>
        <div class="card-content">
          <ul>
            <li>Task one</li>
            <li>Task two</li>
            <li>Task three</li>
          </ul>
        </div>
      </div>
    </div>
  </main>
</section>

<script type="module" src="../public/js/logout.js"></script>
<script type="module" src="../public/js/manager.js"></script>